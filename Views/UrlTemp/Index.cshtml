@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="icon" href="~/Utilidades/logoU.png" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UTEC Egresados - Registro de Empresa</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/CSS/RegistroEmpresa.css" />
</head>
<body>
    <div class="header-section">
        <img src="~/Utilidades/logo-utec.png" alt="UTEC" class="logo">
    </div>

    <div class="form-container">
        <div class="form-wrapper">
            <div class="form-header">
                <h2><i class="fas fa-building"></i> Registro de Empresa</h2>
                <p>Complete el formulario para registrar su empresa y usuario encargado</p>
            </div>
            <div class="form-divider"></div>

            <form method="post" id="formRegistro">
                @Html.AntiForgeryToken()

                <!-- Información de la Empresa -->
                <div class="section-title">
                    <i class="fas fa-building"></i>
                    <span>Información de la Empresa</span>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-building"></i>
                        Razón Social
                        <span class="required">*</span>
                    </label>
                    <input type="text"
                           class="form-control"
                           name="razon_social"
                           placeholder="Ingrese la razón social de la empresa"
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-id-card"></i>
                        NIT
                        <span class="required">*</span>
                    </label>
                    <input type="text"
                           class="form-control"
                           name="nit"
                           placeholder="0000-000000-000-0"
                           pattern="[0-9]{4}-[0-9]{6}-[0-9]{3}-[0-9]{1}"
                           required>
                    <small class="text-muted">Formato: 0000-000000-000-0</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email de Contacto
                        <span class="required">*</span>
                    </label>
                    <input type="email"
                           class="form-control"
                           name="email_contacto"
                           placeholder="empresa@ejemplo.com"
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-phone"></i>
                        Teléfono
                        <span class="required">*</span>
                    </label>
                    <input type="tel"
                           class="form-control"
                           name="telefono"
                           placeholder="2222-2222"
                           pattern="[0-9]{4}-[0-9]{4}"
                           required>
                    <small class="text-muted">Formato: 2222-2222</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-map-marker-alt"></i>
                        Dirección
                        <span class="required">*</span>
                    </label>
                    <textarea class="form-control"
                              name="direccion"
                              rows="3"
                              placeholder="Ingrese la dirección completa de la empresa"
                              required></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-industry"></i>
                        Sector Económico
                        <span class="required">*</span>
                    </label>
                    <select class="form-control" name="sector_economico" required>
                        <option value="">Seleccione un sector</option>
                        <option value="Tecnología">Tecnología</option>
                        <option value="Finanzas">Finanzas</option>
                        <option value="Salud">Salud</option>
                        <option value="Educación">Educación</option>
                        <option value="Manufactura">Manufactura</option>
                        <option value="Comercio">Comercio</option>
                        <option value="Servicios">Servicios</option>
                        <option value="Construcción">Construcción</option>
                        <option value="Telecomunicaciones">Telecomunicaciones</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-users"></i>
                        Tamaño de Empresa
                        <span class="required">*</span>
                    </label>
                    <select class="form-control" name="tamano_empresa" required>
                        <option value="">Seleccione el tamaño</option>
                        <option value="Micro">Micro (1-10 empleados)</option>
                        <option value="Pequeña">Pequeña (11-50 empleados)</option>
                        <option value="Mediana">Mediana (51-200 empleados)</option>
                        <option value="Grande">Grande (más de 200 empleados)</option>
                    </select>
                </div>

                <div class="form-group">
                    <div class="form-check" style="padding-left: 2.5rem;">
                        <input class="form-check-input"
                               type="checkbox"
                               name="vinculada_universidad"
                               id="vinculadaCheck"
                               style="width: 20px; height: 20px; margin-top: 2px;">
                        <label class="form-check-label" for="vinculadaCheck" style="margin-left: 10px; color: #5D0A28; font-weight: 600;">
                            <i class="fas fa-graduation-cap" style="color: #8B1538;"></i>
                            Esta empresa está vinculada con la universidad
                        </label>
                    </div>
                </div>

                <hr style="margin: 35px 0; border-top: 2px solid #e8e8e8;" />

                <!-- Información del Usuario Encargado -->
                <div class="section-title">
                    <i class="fas fa-user-tie"></i>
                    <span>Información del Usuario Encargado</span>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-user"></i>
                        Nombre de Usuario
                        <span class="required">*</span>
                    </label>
                    <input type="text"
                           class="form-control"
                           name="usuario_empresa_nombre_usuario"
                           placeholder="nombre usuario"
                           required>
                    <small class="text-muted">Este será el nombre de usuario para mostrar</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-id-badge"></i>
                        Nombre Completo
                        <span class="required">*</span>
                    </label>
                    <input type="text"
                           class="form-control"
                           name="usuario_empresa_nombre_completo"
                           placeholder="Ingrese el nombre completo del encargado"
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-briefcase"></i>
                        Cargo
                        <span class="required">*</span>
                    </label>
                    <input type="text"
                           class="form-control"
                           name="usuario_empresa_cargo"
                           placeholder="Ej: Gerente General, Director de RRHH"
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email del Usuario
                        <span class="required">*</span>
                    </label>
                    <input type="email"
                           class="form-control"
                           name="usuario_empresa_email"
                           placeholder="usuario@empresa.com"
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-user-shield"></i>
                        Rol
                        <span class="required">*</span>
                    </label>
                    <select class="form-control" name="usuario_empresa_rol" required>
                        <option value="">Seleccione un rol</option>
                        <option value="RRHH" selected>RRHH</option>
                        <option value="Asistente">Asistente</option>
                        <option value="Reclutador">Reclutador</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i>
                        Contraseña
                        <span class="required">*</span>
                    </label>
                    <input type="password"
                           class="form-control"
                           name="usuario_principal_password"
                           placeholder="Ingrese una contraseña segura"
                           minlength="8"
                           required>
                    <small class="text-muted">Mínimo 8 caracteres. Se recomienda incluir mayúsculas, minúsculas y números</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i>
                        Confirmar Contraseña
                        <span class="required">*</span>
                    </label>
                    <input type="password"
                           class="form-control"
                           name="confirmar_password"
                           placeholder="Confirme la contraseña"
                           minlength="8"
                           required>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fas fa-check-circle"></i>
                    <span>Completar Registro</span>
                </button>
            </form>
        </div>
    </div>

    <div class="footer-minimal">
        <p>© 2025 Universidad Tecnológica de El Salvador - Sistema de Egresados</p>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/JS/RegistrarEmpresa.js"></script>
</body>
</html>